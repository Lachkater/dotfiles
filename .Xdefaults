! ------------------------------------------------------
! file:     /home/ramonoid/.Xdefaults
! author:   Ramon Solis - http://cyb3rpunk.wordpress.com
! modified: April 2011
! vim:fenc=utf-8:nu:ai:si:et:ts=4:sw=4:ft=xdefaults:
! ------------------------------------------------------
        
! ----
! Font
! ----
URxvt*font:     xft:Envy Code R:pixelsize=11
URxvt*boldFont: xft:Envy Code R:bold:pixelsize=11

! -------
! Colours
! -------
#include "/home/ramonoid/.xcolours/marzo"

! -----------------
! Fake transparency
! -----------------
!URxvt.transparent: true
!URxvt.shading: 80

! ---------
! Open URLs
! ---------
URxvt.keysym.M-u: perl:mark-yank-urls:activate_mark_mode
URxvt.underlineURLs: true
URxvt.perl-lib:      /home/ramonoid/.urxvt
URxvt.perl-ext:      selection,mark-yank-urls
URxvt*urlLauncher:   /usr/bin/uzbl-tabbed
URxvt.colorUL:       #86a2be

! ------------
! Misc options 
! ------------
URxvt.termName:          rxvt-256color
URxvt*urgentOnBell:      true
URxvt*visualBell:        true
URxvt*skipBuiltinGlyphs: true
URxvt*borderless:        true 
URxvt*scrollBar:         false
URxvt*saveLines:         666
URxvt.buffered:          true
URxvt.iconFile:          /usr/share/pixmaps/rxvt-unicode.png
